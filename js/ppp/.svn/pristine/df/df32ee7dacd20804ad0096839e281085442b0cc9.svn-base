@charset 'utf-8';
//---------------------- 初始化样式-------------------
*
{
    box-sizing: border-box;
}



/* 防止用户自定义背景颜色对网页的影响，添加让用户可以自定义字体 */

html
{
    height: 100%;

    -webkit-text-size-adjust: 100%; //2
        -ms-text-size-adjust: 100%;
    text-rendering: optimizelegibility;
}

body
{
    font-size: 14px;
    line-height: 1.5;

    position: relative;

    padding: 0!important; // footer固定底部

    color: #333; //   background-color: @base-bg-color;
}

// 内外边距通常让各个浏览器样式的表现位置不同
dl,
dt,
dd,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
code,
form,
fieldset,
legend,
input,
textarea,
p,
blockquote,
th,
td,
hr,
button,
article,
aside,
details,
figcaption,
figure,
footer,
header,
menu,
nav,
section
{
    margin: 0;
    padding: 0;
}

//重设 HTML5 标签, IE 需要在 js 中 createElement(TAG)
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
nav,
section,
summary
{
    display: block;
}

//HTML5 媒体文件跟 img 保持一致
audio,
canvas,
progress,
video
{
    display: inline-block;

    vertical-align: baseline;
}

// 要注意表单元素并不继承父级 font 的问题
button,
input,
select,
textarea
{
    //   font: 300 1em @base-font-family;
}

input,
textarea:focus
{
    border-color: #666;
    outline: none;
}

button::-moz-focus-inner,
input::-moz-focus-inner
{
    padding: 0;

    border: 0;
}

input::-webkit-input-placeholder
{
    color: #bbb;
}

input:-moz-placeholder
{
    color: #bbb;
}

input:focus
{
    outline: none;
}

[hidden],
.hidden
{
    display: none;
}

//-----链接-----
a
{
    text-decoration: none;

    background: transparent;
}

a:active,
a:hover
{
    outline: 0;
}

.b,
strong
{
    font-weight: bold;
}

h1,
h2,
h3,
h4,
h5,
h6
{
    line-height: 1.1;

    margin-top: 0;
}

h1,
.h1
{
    font-size: 22px;
}

h2,
.h2
{
    font-size: 16px;
}

h3,
.h3
{
    font-size: 16px;
}

h4,
.h4
{
    font-size: 14px;
}

h5,
.h5
{
    font-size: 14px;
}

h6,
.h6
{
    font-size: 12px;
}

//内联元素
img
{
    vertical-align: middle; //图片下方空白bug

    border: 0;
}



/* 去掉各Table cell 的边距并让其边重合 */

table
{
    // 固定宽度
    table-layout: fixed;
    border-spacing: 0;
    border-collapse: collapse;
    tr
    {
        td
        {
            word-break: break-word;
        }
    }
}



/* 去除默认边框 */

fieldset,
img
{
    border: 0;
}



/* 块/段落引用 */

blockquote
{
    font-weight: 400;

    position: relative;

    margin: 1em 3em 1em 2em;
    padding-left: 1em;

    color: #999;
    border-left: 1px solid #1abc9c;
}

@media only screen and ( max-width: 640px)
{
    blockquote
    {
        margin: 1em 0;
    }
}



/* Firefox 以外，元素没有下划线，需添加 */

acronym,
abbr
{
    font-variant: normal;

    border-bottom: 1px dotted;
}



/* 添加鼠标问号，进一步确保应用的语义是正确的（要知道，交互他们也有洁癖，如果你不去掉，那得多花点口舌） */

abbr
{
    cursor: help;
}

del
{
    text-decoration: line-through;
}

small
{
    font-size: 80%;
}

sub,
sup
{
    font-size: 75%;
    line-height: 0;

    position: relative;

    vertical-align: baseline;
}

:root sub,
:root sup
{
    vertical-align: baseline;
    /* for ie9 and other modern browsers */
}

sup
{
    top: -.5em;
}

sub
{
    bottom: -.25em;
}

address,
caption,
cite,
code,
dfn,
em,
th,
var
{
    font-weight: 400;
    font-style: normal;
}



/* 去掉列表前的标识, li 会继承，大部分网站通常用列表来很多内容，所以应该当去 */

ul,
ol
{
    list-style: none;
}



/* 对齐是排版最重要的因素, 别让什么都居中 */

caption,
th
{
    text-align: left;
}

.typo a
{
    border-bottom: 1px solid #1abc9c;
}

.typo a:hover
{
    text-decoration: none;

    color: #555;
    border-bottom-color: #555;
}



/* 强制文本换行 */

.textwrap,
.textwrap td,
.textwrap th
{
    word-wrap: break-word;

    word-fieldset: break-all;
}



/* 标记，类似于手写的荧光笔的作用 */

mark
{
    margin: 0 5pxfieldset;
    padding: 2px;

    border-bottom: 1px solid #ffedce;
    background: #fffdd1;
}




pre
{
    display: block;

    padding: 1em 1.5em;

    white-space: pre-wrap;

    border: 1px solid #ddd;
    background: #f8f8f8;

    -webkit-overflow-scrolling: touch;
}


hr
{
    height: 10px;
    margin-bottom: .8em;

    border: none;
    border-bottom: 1px solid #cfcfcf;
}

textarea
{
    &[disabled]
    {
        cursor: not-allowed;

        background-color: #ccc;
    }
}
