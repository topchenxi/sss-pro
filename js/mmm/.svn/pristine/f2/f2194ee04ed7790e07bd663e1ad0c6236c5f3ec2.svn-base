
.content{
    padding-bottom: 2.2rem;
}
.content-block{
    padding: 0;
}
.list-block{
  margin: 0;
  &.inset{
    margin: 0;
    border-radius: 0; 
  }
  .item-content{
    padding-left: 0;
  }
  .item-inner{
    min-height: 3rem;
    color: #6d6d72;
  } 
  .item-after.select-custorm{
    max-height: 3rem;
    word-break: break-all;
    width: 65%;
    max-width: 70%;
    white-space: inherit;
  }
  .item-title.min-40{
    min-width: 40%;
  } 
  .item-title{
    min-width: 25%;
  }
  .has-upload{
    display: inline-block;
    padding: 10px;
    width: 100%;
    .item-after{
      max-height: 5rem;
      display: table;
      white-space: inherit;
      width: 80%;
    }
    .item-title{
      min-width: 21%;
    }
    .upload-img{
      display: inline-block;
      position: relative;
      margin-right: 15px;
      a{
        display: inline-block;
        overflow: hidden;
      }
      img{
        width: 4rem;
        height: 3rem;
      }
      .img-del{
        cursor: pointer;
        position: absolute;
        right: -5px;
        top: -5px;
        width: 20px;
        height: 20px;
        background-color: gray;
        border-radius: 50%;
        text-align: center;
        line-height: 20px;
      }                  
    } 
    .add-img-btn{
      position: relative;
      cursor: pointer;
      display: inline-block;
      width: 4rem;
      height: 3rem;
      text-align: center;
      border: 1px solid #d8d8d8;
      vertical-align: top;
      //background-color: red;
      .add-icon{
        position: absolute;
        top: -15px;
        width: 100%;
        left: 0;
        text-align: center;
        font-size: 2rem;
      }
      .text{
        position: absolute;
        bottom: 0;
        width: 100%;
        left: 0;
        text-align: center;
      }
      .file-input{
        display: none;
      }
      .img-upload-label{
        display: inline-block;
        position: absolute;
        width: 100%;
        height: 100%;
        right: 0;
        top: 0;
      }
    } 
  }
  .radio-group{
    label{
      display: inline-block;
      width: 4.2rem;
      input{
        width: 0.8rem;
        height: 0.8rem;
        vertical-align: middle;
        margin-right: 0.25rem; 
      }    
    }
  }
    
}
    
.bottom-btn{
  position: absolute;
  z-index: 999;
  bottom: 0;
  height: 2rem;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  padding: 0.25rem 0;
  z-index: 9999;
  .button-block{
    width: 92%;
    margin-left: 4%;
    height: 100%;
    font-size: 100%;
    line-height: 1.6rem; 
  }
}

