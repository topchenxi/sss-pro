#seCardInfo {
	.bar {
		z-index: 100;
	}
  .content {
    padding-bottom: 10px;
  }
	.bar-nav ~ .content {
		top: 1rem;
	}
	.list-block textarea {
		height: 3rem;
		overflow-y: auto;
	}
	.has-upload {
        padding: 10px;
        padding-right: 0;
        padding-left: 0;
        overflow: hidden;
        margin-left: 17px;
        border-bottom: 1px solid #e5e5e5;
        padding-bottom: 0;
        justify-content: flex-start;
        align-items:flex-start;
        .add-img-btn {
              position: relative;
              cursor: pointer;
              display: inline-block;
              width: 4rem;
              height: 3.5rem;
              text-align: center;
              vertical-align: top;
              .add-icon {
                    position: absolute;
                    top: -15px;
                    width: 100%;
                    left: 0;
                    text-align: center;
                    font-size: 2rem;
                }
              .text {
                    position: absolute;
                    bottom: 0;
                    width: 100%;
                    left: 0;
                    text-align: center;
              }
              .img-upload-label {
                    display: inline-block;
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    right: 0;
                    top: 0;
              }
              .file-input {
                  display: none;
              }
        }
        .where-image{
          float: left;
          .up-img{
            float: left;
            width: 4.1rem;
            height: 3.6rem;
            border:1px solid #ccc;
            margin-right: 10px;
            margin-bottom: 10px;
            position: relative;
            .close {
              position: absolute;
              width: 20px;
              height: 20px;
              border: 1px solid #ccc;
              text-align: center;
              line-height: 17px;
              border-radius: 50%;
              background: #ccc;
              color: #fff;
              right: -10px;
              top: -8px;
            }
          }
        }
        .up-title {
        	padding-right: 10px;
        	min-width: 60px;
        }
    }
    .y-radio2:checked ~ .weight-width {
    	display:none;
    }
    .y-radio:checked ~ .weight-width {
    	display:block;
    }
}