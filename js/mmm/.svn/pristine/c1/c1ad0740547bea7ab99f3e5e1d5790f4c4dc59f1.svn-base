#sellerEdit{
	.list-block{
		textarea{
			height: auto;
			min-height: 1rem;
			max-height: 3.2rem;
		}
		.item-input.buttons-row{
			width: 45%;
			position: relative;
			left: -20%;
		}
		.pre-tel{
			width: 30%;
			float: left;
		}
		.to {
			line-height: 45px;
		}
		.end-tel{
			float: left;
			width: 60%;
		}
		.repeat-tips {
			position: absolute;
			padding: 0.5rem;
			width: 100%;
			text-align: center;
			font-size: 0.6rem;
		}
	}
	.save-button{
		width: 80%;
		margin: 2rem auto;
		height: 1.8rem;
		line-height: 1.8rem;
		background-color: #fff;
		font-size: 0.8rem;
	}
}
