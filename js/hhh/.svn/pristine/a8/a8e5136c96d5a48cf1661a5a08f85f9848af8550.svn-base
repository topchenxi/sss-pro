.app
{
    /* el-button */
    .btn,
    .el-button
    {
        @include btn;
        @include button($btn-default-bg-color-default, $btn-default-bg-color-hover, $btn-default-bg-color-active, $btn-default-bg-color-disabled);
    }
    .el-button--default,
    .el-button--primary
    {
        @include button($btn-default-bg-color-default, $btn-default-bg-color-hover, $btn-default-bg-color-active, $btn-default-bg-color-disabled);
    }
    .el-button--warning
    {
        @include button($btn-submit-bg-color-default, $btn-submit-bg-color-hover, $btn-submit-bg-color-active, $btn-submit-bg-color-disabled);
    }
    /* el-pagination */
    .el-pagination
    {
        button
        {
            &:hover
            {
                color: $green;
            }
        }
        .el-pagination__total
        {
            margin: 0 18px;
        }
        .el-pagination__sizes
        {
            margin-right: 20px;
        }

        .el-pagination__editor
        {
            border: 1px solid #ddd;
            &:hover,
            &:focus
            {
                border-color: $green;
            }
        }
        .el-input__inner
        {
            border: 1px solid #ddd;
            &:hover
            {
                border-color: $green;
            }
        }
        .btn-prev,
        .btn-next
        {
            border: 1px solid #ddd;
            border-radius: 2px;
            background: #fff;
        }
        .el-pager
        {
            margin-right: 6px;
            li
            {
                margin-left: 6px;
                padding: 0 5px;

                color: #666;
                border: 1px solid #ddd;
                border-radius: 2px;
                background: #fff;
                &:hover
                {
                    color: #666;
                }
                &:hover
                {
                    border-color: $green;
                }
            }
            .active
            {
                color: #fff;
                border: 1px solid $green;
                border-radius: 2px;
                background: $green;
                &:hover
                {
                    color: #fff;
                }
            }
        }
    }
    /*  el-table */
    .el-table--border
    {
        .el-table__header-wrapper,
        .el-table__fixed-header-wrapper
        {
            background: #f9f9f9;
            thead
            {
                tr
                {
                    th
                    {
                        border: 1px solid #ddd !important;
                        border-bottom: 0 !important;
                         background-color: #f9f9f9;
                        .cell
                        {
                            text-align: center;

                            background-color: #f9f9f9;
                        }
                    }
                }
            }
        }
        .el-table__body-wrapper,
        .el-table__fixed-body-wrapper
        {
            tbody
            {
                tr
                {
                    td
                    {
                        border: 1px solid #ddd !important;
                        background-color: transparent;
                    }
                    td.is-left
                    {
                        text-align: left;
                    }
                    td.is-right
                    {
                        text-align: right;
                    }
                    &.hover-row
                    {
                        td
                        {
                            background-color: #f5f5f5;
                        }
                    }
                    &:hover
                    {
                        td
                        {
                            background-color: #f5f5f5;
                        }
                    }
                }
            }
        }
    }

    .el-input__inner,
    .el-textarea__inner
    {
        border: 1px solid #ddd;
        border-radius: 0;
        outline: 0;
        &:hover,
        &:focus
        {
            border-color: $green;
        }
    }

    .el-dialog__headerbtn
    {
        &:hover,
        &:focus
        {
            .el-dialog__close
            {
                color: $green;
            }
        }
    }

    .el-radio
    {
        .el-radio__input
        {
            .el-radio__inner
            {
                border-color: #ccc;
                background: #fff;
            }
        }
        .is-checked
        {
            .el-radio__inner
            {
                border-color: $green;
                background: $green;
            }
        }
    }

    .el-checkbox
    {
        .el-checkbox__input
        {
            .el-checkbox__inner
            {
                border-color: #ccc;
                background: #fff;
            }
        }
        .is-checked
        {
            .el-checkbox__inner
            {
                border-color: $green;
                background: $green;
            }
        }
        .is-disabled
        {
            .el-checkbox__inner
            {
                border-color: #ccc;
                background: #eee;
            }
        }
    }
}



.el-select-dropdown__item
{
    &.selected,
    &.selected.hover
    {
        color: #fff;
        background-color: $green !important;
    }
}

.el-date-table
{
    td
    {
        &.current:not(.disabled),
        &.end-date,
        &.start-date
        {
            color: #fff;
            background-color: $green !important;
        }

        &.today
        {
            position: relative;

            color: $green;
        }

        &.today:before
        {
            border-top: .5em solid $green;
        }
    }
}

.app,
.el-message-box__wrapper
{
    .el-input__inner
    {
        height: 32px;

        @include input;
    }
}

.el-tooltip__popper
{
    max-width: 400px;
}
